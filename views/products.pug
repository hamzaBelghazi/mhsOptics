extends base

block content
  section.all_products
    .filter_toggle
      a.filter_btn(href='#!')
        span.material-icons  filter_alt 
        | Filter
    .filter_container
      .filter_by_gender.filter
        .filter_title
          span.title gender
        .checkbox_wraper
          input#men(type='checkbox' name='productGender' value='men')
          label(for='men') Men
        .checkbox_wraper
          input#women(type='checkbox' name='productGender' value='women')
          label(for='women') Women
        .checkbox_wraper
          input#kids(type='checkbox' name='productGender' value='kids')
          label(for='kids') Kids
      .filter_by_frame_type.filter
        .filter_title
          span.title Frame type
        .checkbox_wraper
          input#fullrim(type='checkbox' name='frameType' value='fullrim')
          label(for='fullrim') fullrim
        .checkbox_wraper
          input#halfrim(type='checkbox' name='frameType' value='halfrim')
          label(for='halfrim') halfrim
        .checkbox_wraper
          input#rimless(type='checkbox' name='frameType' value='rimless')
          label(for='rimless') rimless
