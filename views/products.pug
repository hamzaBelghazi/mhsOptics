      .filter_by_frames_color.filter
        .filter_title
          span.title Frame color
        .checkbox_wraper
          input#black(type='checkbox' name='colors' value='black')
          label(for='black') black
        .checkbox_wraper
          input#blue(type='checkbox' name='colors' value='blue')
          label(for='blue') blue
        .checkbox_wraper
          input#brown(type='checkbox' name='colors' value='brown')
          label(for='brown') brown
        .checkbox_wraper
          input#gold(type='checkbox' name='colors' value='gold')
          label(for='gold') gold
        .checkbox_wraper
          input#green(type='checkbox' name='colors' value='green')
          label(for='green') green
        .checkbox_wraper
          input#grey(type='checkbox' name='colors' value='grey')
