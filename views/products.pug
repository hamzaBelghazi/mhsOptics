          input#red(type='checkbox' name='colors' value='red')
          label(for='red') red
        .checkbox_wraper
          input#silver(type='checkbox' name='colors' value='silver')
          label(for='silver') silver
        .checkbox_wraper
          input#transparent(type='checkbox' name='colors' value='transparent')
          label(for='transparent') transparent
        .checkbox_wraper
          input#white(type='checkbox' name='colors' value='white')
          label(for='white') white
        .checkbox_wraper
          input#yellow(type='checkbox' name='colors' value='yellow')
          label(for='yellow') yellow
      .filter_by_frame_material.filter
        .filter_title
          span.title Frame material
        .checkbox_wraper
          input#metal(type='checkbox' name='frameMatirial' value='metal')
          label(for='metal') metal
        .checkbox_wraper
          input#plastic(type='checkbox' name='frameMatirial' value='plastic')
          label(for='plastic') plastic
        .checkbox_wraper
          input#titanium(type='checkbox' name='frameMatirial' value='titanium')
          label(for='titanium') titanium
    .catalogue_all.best_seller
      .prods
        if products 
          each p in products
            .product_cart
              img.product_preview(src=`/img/products/${p.images[0]}` alt=`${p.title}`)
              span.product_title= p.title
              a.product_actions(href=`/product/${p.id}`)
                span.price=p.price
                span.try_on
                  span.material-icons  videocam 
     
      .load_more_data
         span.load_more_btn load more items

       
            


